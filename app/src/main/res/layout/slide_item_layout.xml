<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.develop.slide_slip.SlideSlipView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:tag="1"
            android:id="@+id/slide_item_layout_item"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/slide_item_layout_head"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/holo_purple" />

            <TextView
                android:id="@+id/slide_item_layout_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:tag="101"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slide_item_layout_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:maxLines="1"
                android:text="置顶"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/slide_item_layout_unread"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff0"
                android:gravity="center"
                android:maxLines="1"
                android:text="标记为未读"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/slide_item_layout_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:maxLines="1"
                android:text="删除"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>
    </com.example.develop.slide_slip.SlideSlipView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF" />
</LinearLayout>