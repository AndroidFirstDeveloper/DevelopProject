<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="加载次数  "
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/fragment_lazyload_layout_tv1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_lazyload_layout_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="helloworld"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="页面  "
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/fragment_lazyload_layout_tv"
        app:layout_constraintTop_toBottomOf="@+id/fragment_lazyload_layout_tv1" />

    <TextView
        android:id="@+id/fragment_lazyload_layout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="helloworld"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_lazyload_layout_tv1" />

</android.support.constraint.ConstraintLayout>